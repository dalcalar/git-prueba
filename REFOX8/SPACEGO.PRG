PARAMETER PF
* SYNTAX		:  =SPACEGO('TEST.PRG') or  =SPACEGO('*.PRG')
* PURPOSE	: STRIP SINGLE LEADING SPACE IN FRONT OF EACH PROGRAM LINE 
IF FILE('&PF')
	DO SG WITH PF
ELSE
	IF '*'$PF
		=ADIR(FMULT,PF)
		FOR MF=1 TO ALEN('FMULT',1)
			DO SG WITH FMULT(MF,1)
			? "De-spaced :",FMULT(MF,1)
		ENDFOR
	ENDIF
ENDIF

PROCEDURE SG
PARAMETER POUT
COPY FILE (POUT) TO SPACEGO.RFX
FI=FOPEN('SPACEGO.RFX')
FO=FCREATE(POUT)
DO WHILE !FEOF(FI)
	L = FGETS(FI)
	IF LEN(L)>1 .AND. LEFT(L,1)=CHR(32)
		=FPUTS(FO,SUBSTR(L,2))
	ELSE
		=FPUTS(FO,L)
	ENDIF
ENDDO
=FCLOSE(FI)
=FCLOSE(FO)
DELE FILE SPACEGO.RFX
RETURN
		
		
